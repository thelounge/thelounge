    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "primer-tooltips": "^2.0.0",
    "sinon": "^21.0.0",
    "socket.io-client": "^4.8.1",
    "sortablejs": "^1.15.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "ts-loader": "^9.5.4",
